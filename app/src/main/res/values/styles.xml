<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="password">
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/oval_button_gray</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="mapMarkerToggleButton">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
</resources>
